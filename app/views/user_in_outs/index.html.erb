<p id="notice"><%= notice %></p>

<h1>User In Outs</h1>

<table>
  <thead>
    <tr>
      <th>User in</th>
      <th>User out</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_in_outs.each do |user_in_out| %>
      <tr>
        <td><%= user_in_out.user_in %></td>
        <td><%= user_in_out.user_out %></td>
        <td><%= user_in_out.user.email.split('@')[0].capitalize %></td>
        <td><%= link_to 'Show', user_in_out %></td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_user_in_out_path(user_in_out) %></td>
          <td><%= link_to 'Destroy', user_in_out, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User In Out', new_user_in_out_path %>
