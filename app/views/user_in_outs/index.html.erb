<p id="notice"><%= notice %></p>

<h1>User check-in check-out list</h1>

<table>
  <thead>
    <tr>
      <th>User in</th>
      <th>User out</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_in_outs.each do |user_in_out| %>
      <tr>
        <td><%= user_in_out.user_in %>&nbsp&nbsp</td>
        <td><%= user_in_out.user_out %>&nbsp&nbsp</td>
        <td><%= user_in_out.user.email %>&nbsp&nbsp</td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_user_in_out_path(user_in_out) %></td>
          <td><%= link_to 'Destroy', user_in_out, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin %>
  <%= link_to 'New User Check-in Check-out', new_user_in_out_path, class:"btn btn-lg btn-primary" %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"btn btn-lg btn-primary" %>
<% else %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"btn btn-lg btn-primary" %>
<% end %>
